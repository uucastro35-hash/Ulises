// SandboxMonkeyOverride
store Inventory = {}
store Assets = ["Monkey", "Dragon", "Robot"]

function CheckOwnership(item):
    return Inventory.Contains(item)

function SpawnMonkey():
    if not CheckOwnership("Monkey"):
        Inventory.Add("Monkey")
        monkey = SpawnEntity("Monkey", position = player.position + forward*1.5)
        Log("Monkey spawned in front of player")
        return monkey
    else:
        Log("Monkey already in inventory")
        return LoadEntity("Monkey")
